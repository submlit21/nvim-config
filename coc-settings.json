{
  "languageserver": {
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cc", "cpp", "c++", "h"],
      "rootPatterns": [".ccls", "compile_commands.json", ".git", ".root"],
      "trace.server": "verbose",
      "initializationOptions": {
        "cache": {
          "directory": "/home/hs/.cache/ccls"
        },
        "highlight": { "lsRanges": true }
      }
    },

    "omnisharp-dotnet": {
      "command": "dotnet",
      "args": [
        "/home/hs/.local/share/lsp/omnisharp/OmniSharp.dll",
        "--languageserver",
        "--hostPID",
        "${PID}"
      ],
      "filetypes": ["cs"],
      "rootPatterns": ["*.csproj", "*.sln", ".git"]
    },

    "go": {
      "command": "gopls",
      "filetypes": ["go"],
      "rootPatterns": ["go.mod", ".git"],
      "initializationOptions": {
        "usePlaceholders": true,
        "completeUnimported": true,
        "gofumpt": false
      }
    },

    "jdtls": {
      "command": "jdtls",
      "rootPatterns": ["pom.xml", "build.gradle", ".git"],
      "args": ["-data", "home/hs/.cache/jdtls-workspace"],
      "filetypes": ["java"]
    }
  },

  "java.configuration.runtimes": [
    {
      "name": "JavaSE-17",
      "path": "/usr/local/lib/java/jdk-17",
      "default": true
    }
  ],

  "java.jdt.ls.lombokSupport.enabled": false
}

